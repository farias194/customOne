{% schema  %} 
    
{
    "name": "Hero Section",
    "settings": [

        {
        "type": "select",
        "label": "Hero text line",

        "id": "div_range",
        "options": [
            {
                "value": "1fr" ,
                "label": "small"
                    },
                    {
                "value": "3fr" ,
                "label": "medium"
                    }
        ]  ,
        "default": "medium"


        }
    
        
    ],
    "blocks": [
        {
            "type": "image_picker",
            "name": "Image Block",
            "settings": [
                {
                    "id": "block_image",
                    "type": "image_picker",
                    "label": "text_image"

                }
            ]

                },
                {
                    "type": "text",
                    "name": "text Line",
                    "settings": [{
                        "id": "text_line",
                        "type": "text",
                        "label": "enter lext line here",
                        "default": "enter text line here"
                    }]
                }
    ],
    "presets": [
        {
            "name": "Hero Section"
        }
    ]
}
 {% endschema %}
<div>
    <div>


<div  class="container">
    <div style ="grid-column" : {{section.settings.div_range}}class="text-line">

{% for block in section.blocks %}
    {% case block.type %}
    {% when 'text' %}
        <p>{{block.settings.text_line}}</p>
    {% when 'image_picker' %} 
<img width=100px height="100px" src="{{block.settings.block_image | img_url : 'master'}}" alt="hero image">
{% else %} 
<p>Unsuppored block type</p>
</div>
    {% endcase %}
{% endfor %}
</div>
</div>
</div>

{% style  %} 

.container{
    display: grid;
    gird-template-columns: repeat(5, 1fr)
    grid-auto-rows: minmax(100px, auto)
}
{% endstyle %}