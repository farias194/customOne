{% schema %}
  
  {
    "name": "Custom Image Banner",
    "tag": "section",
    "class": "section",
    "settings": [
      {
        "type": "image_picker",
        "id": "image",
        "label": "image"
      }
     
    ],
    "blocks": [
      {
        "type": "banner_text",
        "name": "Banner Text",
        "settings": [
          {
            "type": "text",
            "id": "banner_text",
            "label": "Banner Text"
            
          }
        ]
        
      }
    ],
  
   "presets": [
    {
      "name": "Custom Image Banner",
      "category": "Custom"
    }
  ]
  }
  
{% endschema %}

<div>
  <div class="image_container">
      {%  if section.settings.image %}
<img src="{{ section.settings.image }}" width="100px" height="auto">
            {% endif %}

        </div>
    {% for blocks in section.blocks %}
  {% if blocks.id == 'banner_text' %}
  <div class="banner_text"> <h1>{{ block.settings.banner_text }}</h1></div>
    {% endif %}
      {% endfor %}
</div>