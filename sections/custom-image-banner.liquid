{% schema %}
  
  {
    "name": "Custom Image Banner",
    "tag": "section",
    "class": "section",
    "settings": [
      {
        "type": "image_picker",
        "id": "image",
        "label": "image"
      }
     
    ],
    "blocks": [
      {
        "type": "header",
        "name": "headline",
        
        "settings": [
          {
            "type": "text",
            "id": "banner_header",
            "default": "insert text here",
            "label": "Banner Text"
            
          }
       
        ]
        
      },
         {
            "type": "body_text",
            "name": "body",
            "settings":[
              {
                "type": "textarea",
                "id": "banner_text",
                "default": "insert text",
                "label": "banner text",
                
                
              }
            ]
          }
    ],
  
   "presets": [
    {
      "name": "Custom Image Banner",
      "category": "Custom"
    }
  ]
  }
  
{% endschema %}
<style>
  .banner_image{
    object-fit: contain;
    aspect-ratio: 1/1;
    width: 100%;
    z-index: 1;
      

    height: auto;
    
  }
  .banner_text{
    top: 50%;
    left:50px;
    text-align: center;
    position: absolute;
    z-index: 2;
  }
  .custom_image_banner_container{
    max-width: auto;
    position: relative;
  }
</style>


<div class="custom_image_banner_container">
  <div class="image_container">
      {%  if section.settings.image %}
<img class="banner_image" src="{{ section.settings.image | image_url}}" width="auto" height="auto">
            {% endif %}

        </div>
  <div class='text'>
    {% for block in section.blocks %}
  {% case block.type %}
    {% when 'header'%}
 <h1 class="banner_header">{{ block.settings.banner_header }}</h1>
    {% when 'body_text' %}
      <p class="banner_text">{{ block.settings.banner_text }}</p>
    {% endcase %}
      {% endfor %}
</div>